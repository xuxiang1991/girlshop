<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/App_backgroud_grey"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_top"></include>


    <RadioGroup
        android:id="@+id/rg_login"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_login_type"
        android:orientation="horizontal"
        android:padding="1px">

        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_rbutton_left"
            android:button="@null"
            android:textColor="@color/white"
            android:checked="true"
            android:gravity="center"
            android:text="客户登录" />

        <RadioButton
            android:id="@+id/rb_chef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_rbutton_right"
            android:textColor="@color/App_actvitytext_grey"
            android:button="@null"
            android:gravity="center"
            android:text="商户登录" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:text="为了方便联系,请验证手机"
        android:textColor="@color/App_actvitytext_grey"
        android:textSize="@dimen/App_little_text_size" />

    <LinearLayout
        android:id="@+id/telViewGroup"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/telEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/select_edittext"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            android:textColorHint="@color/App_actvitytext_grey"
            android:hint="请输入手机号"
            android:textColor="@color/App_actvitytext_grey"/>

        <TextView
            android:id="@+id/codeBtn"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="11sp"
            android:layout_weight="1"
            android:textColor="@color/App_actvitytext_grey"
            android:background="@drawable/shape_yanzhengma"
            android:text="获取验证码" />

    </LinearLayout>

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="37dp"
        android:layout_marginTop="9dp"
        android:paddingLeft="5dp"
        android:background="@drawable/select_edittext"
        android:textSize="13sp"
        android:textColorHint="@color/App_actvitytext_grey"
        android:hint="验证码"
        android:textColor="@color/App_actvitytext_grey"
        />

    <TextView
        android:id="@+id/loginBtn"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_yanzhengma"
        android:gravity="center"
        android:text="登录" />


</LinearLayout>